{
    "$id": "filters.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Filters Schema",
    "type": "object",
    "definitions": {
        "argval": {
            "properties": {
                "polarity": {
                    "enum": [
                        "MAX",
                        "MIN"
                    ]
                },
                "ordinal": {
                    "anyOf": [
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/fixed_value"
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                },
                "quantity": {
                    "type": "object",
                    "properties": {
                        "attribute": {
                            "$ref": "#/definitions/attribute"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "attribute": {
            "oneOf": [
                {
                    "enum": [
                        "HEIGHT",
                        "WIDTH",
                        "X",
                        "Y",
                        "Z",
                        "REF_TYPE",
                        "HEAD_PITCH",
                        "HEAD_YAW",
                        "NAME",
                        "BORN_TIME",
                        "MODIFY_TIME",
                        "SPEAKER",
                        "VISIT_TIME",
                        "FINISHED_TIME",
                        "CHAT",
                        "LOGICAL_FORM",
                        "SIZE",
                        "COLOUR",
                        "LOCATION",
                        "TAG",
                        "BLOCK_TYPE",
                        "CURRENT_TIME"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "num_blocks": {
                            "$ref": "#/definitions/num_blocks"
                        }
                    },
                    "required": [
                        "num_blocks"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "linear_extent": {
                            "$ref": "#/definitions/linear_extent"
                        }
                    },
                    "required": [
                        "linear_extent"
                    ]
                },
                {
                    "type": "object",
                    "properties": {
                        "task_info": {
                            "properties": {
                                "reference_object": {
                                    "$ref": "grammar_spec.schema.json#/definitions/reference_object"
                                }
                            }
                        }
                    },
                    "required": [
                        "task_info"
                    ]
                }
            ]
        },
        "close_to": {
            "type": "object",
            "properties": {
                "close_tolerance": {
                    "oneOf": [
                        {
                            "enum": [
                                "DEFAULT"
                            ]
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                }
            }
        },
        "comparator": {
            "properties": {
                "input_left": {
                    "properties": {
                        "value_extractor": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "filters": {
                                            "$ref": "#/definitions/filters"
                                        }
                                    },
                                    "required": [
                                        "filters"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "attribute": {
                                            "$ref": "#/definitions/attribute"
                                        }
                                    },
                                    "required": [
                                        "attribute"
                                    ]
                                },
                                {
                                    "$ref": "action_dict_components.schema.json#/definitions/span"
                                }
                            ]
                        }
                    }
                },
                "comparison_type": {
                    "oneOf": [
                        {
                            "enum": [
                                "GREATER_THAN",
                                "LESS_THAN",
                                "GREATER_THAN_EQUAL",
                                "LESS_THAN_EQUAL",
                                "NOT_EQUAL",
                                "EQUAL"
                            ]
                        },
                        {
                            "$ref": "#/definitions/close_to"
                        },
                        {
                            "$ref": "#/definitions/mod_equal"
                        },
                        {
                            "$ref": "#/definitions/mod_close"
                        }
                    ]
                },
                "input_right": {
                    "properties": {
                        "value_extractor": {
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/filters"
                                },
                                {
                                    "$ref": "#/definitions/attribute"
                                },
                                {
                                    "$ref": "action_dict_components.schema.json#/definitions/span"
                                }
                            ]
                        }
                    }
                },
                "comparison_measure": {
                    "$ref": "action_dict_components.schema.json#/definitions/span"
                },
                "set_comparison": {
                    "enum": [
                        "ANY",
                        "ALL"
                    ]
                }
            }
        },
        "filters": {
            "type": "object",
            "properties": {
                "output": {
                    "oneOf": [
                        {
                            "enum": [
                                "MEMORY",
                                "COUNT"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "attribute": {
                                    "$ref": "#/definitions/attribute"
                                }
                            }
                        }
                    ]
                },
                "contains_coreference": {
                    "const": "yes"
                },
                "memory_type": {
                    "enum": [
                        "TASKS",
                        "REFERENCE_OBJECT",
                        "CHAT",
                        "PROGRAM",
                        "ALL"
                    ]
                },
                "comparator": {
                    "$ref": "#/definitions/comparator"
                },
                "triples": {
                    "$ref": "#/definitions/triples"
                },
                "author": {
                    "oneOf": [
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/fixed_value"
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                },
                "location": {
                    "$ref": "action_dict_components.schema.json#/definitions/location"
                },
                "repeat": {
                    "$ref": "grammar_spec.schema.json#/definitions/repeat"
                },
                "selector": {
                    "$ref": "#/definitions/selector" 
                }
            },
            "additionalProperties": false
        },
        "linear_extent": {
            "properties": {
                "relative_direction": {
                    "enum": [
                        "LEFT",
                        "RIGHT",
                        "UP",
                        "DOWN",
                        "FRONT",
                        "BACK",
                        "AWAY",
                        "INSIDE",
                        "OUTSIDE"
                    ]
                },
                "frame": {
                    "enum": [
                        "SPEAKER",
                        "AGENT",
                        "ABSOLUTE"
                    ]
                },
                "has_measure": {
                    "$ref": "action_dict_components.schema.json#/definitions/span"
                },
                "source": {
                    "reference_object": { "$ref": "grammar_spec.schema.json#/definitions/reference_object" }
                },
                "destination": {
                    "reference_object": { "$ref": "grammar_spec.schema.json#/definitions/reference_object" }
                }
            }
        },
        "mod_close": {
            "type": "object",
            "properties": {
                "modulus": {
                    "oneOf": [
                        {
                            "enum": [
                                "DEFAULT"
                            ]
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                },
                "close_tolerance": {
                    "oneOf": [
                        {
                            "enum": [
                                "DEFAULT"
                            ]
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                }
            }
        },
        "mod_equal": {
            "type": "object",
            "properties": {
                "modulus": {
                    "oneOf": [
                        {
                            "enum": [
                                "DEFAULT"
                            ]
                        },
                        {
                            "$ref": "action_dict_components.schema.json#/definitions/span"
                        }
                    ]
                }
            }
        },
        "num_blocks": {
            "type": "object",
            "description": "This represents number of blocks and hence a filter over those. For example: go to the house with most red blocks.",
            "properties": {
                "block_filters": {
                    "properties": {
                        "triples": {
                            "$ref": "#/definitions/triples"
                        }
                    }
                }
            }
        },
        "selector": {
            "type": "object",
            "properties": {
                "argval": {
                    "$ref": "#/definitions/argval"
                },
                "location": {
                    "$ref": "action_dict_components.schema.json#/definitions/location"
                }
            }
        },
        "triples": {
            "type": "array",
            "description": "A list of filters",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "anyOf": [
                    {
                        "required": [
                            "pred_text",
                            "obj_text"
                        ]
                    },
                    {
                        "required": [
                            "pred_text",
                            "subj_text"
                        ]
                    }
                ],
                "properties": {
                    "pred_text": {
                        "type": "string"
                    },
                    "subj_text": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/span"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/fixed_value"
                            }
                        ]
                    },
                    "obj_text": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/span"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/fixed_value"
                            }
                        ]
                    },
                    "subj": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "#/definitions/filters"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/span"
                            }
                        ]
                    },
                    "obj": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "#/definitions/filters"
                            },
                            {
                                "$ref": "action_dict_components.schema.json#/definitions/span"
                            }
                        ]
                    }
                }
            }
        }
    }
}